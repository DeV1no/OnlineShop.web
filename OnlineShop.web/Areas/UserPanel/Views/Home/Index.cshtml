@using OnlineShop.web.Convertor
@model OnlineShop.web.DTOs.UserPanelViewModel.InformationUserViewModel

@{
    ViewData["Title"] = "پنل کاربری " + User.Identity.Name;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">آنلاین شاپ</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page"> پنل کاربری </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>

                        <div class="avatar-layer">
                            <div class="img-layer">
                                <a href="" class="change-image">
                                    <i class="zmdi zmdi-edit"></i>
                                </a>
                                <img src="UserAvatar/Defult.jpg">
                            </div>
                            <div class="detail">
                                <span> نام کاربری </span>
                                <span> عضویت : 01/01/1395 </span>
                            </div>
                        </div>

                        <section>
                            <header>
                                <h3> میز کار </h3>
                            </header>
                            <div class="inner">
                                <ul>
                                    <li>
                                        <a href=""> مشاهده حساب کابری </a>
                                    </li>
                                    <li>
                                        <a href=""> ویرایش حساب کابری </a>
                                    </li>
                                    <li>
                                        <a href=""> تغییر رمز عبور </a>
                                    </li>
                                    <li>
                                        <a href=""> تنظیمات حساب کاربری </a>
                                    </li>
                                    <li>
                                        <a href=""> خروج از حساب کاربری </a>
                                    </li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1> داشبورد </h1>

                        </header>
                        <div class="inner">
                            <div class="account-information">
                                <h3> اطلاعات کاربری </h3>
                                <ul>
                                    <li> <i class="zmdi zmdi-assignment-account"></i> نام کاربری : @Model.UserName </li>
                                    <li> <i class="zmdi zmdi-email"></i> ایمیل : @Model.Email </li>
                                    <li> <i class="zmdi zmdi-calendar-check"></i> تاریخ عضویت : @Model.RegisterDate.ToShamsi() </li>
                                    <li> <i class="zmdi zmdi-account"></i> موجودی حساب : @Model.Wallet تومان </li>
                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>