@model OnlineShop.web.DTOs.UserPanelViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">آنلاین شاپ</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page"> تغییر کلمه عبور </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar"/>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1> تغییر رمز عبور </h1>
                        </header>
                        <div class="inner form-layer">
                            <form asp-action="ChangePassword" method="post">

                                @if (ViewBag.IsSuccess != null)
                                {
                                    <div class="alert alert-success">
                                        رمز عبور شما با موفقیت ویرایش شد
                                    </div>
                                }

                                <input type="hidden"/>
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username">
                                                <i class="zmdi zmdi-key"></i>
                                            </span>
                                            <input type="password" class="form-control" asp-for="OldPassword" placeholder="رمز عبور قبلی" aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username">
                                                <i class="zmdi zmdi-key"></i>
                                            </span>
                                            <input type="password" class="form-control" asp-for="Password" placeholder="رمز عبور جدید" aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username">
                                                <i class="zmdi zmdi-key"></i>
                                            </span>
                                            <input type="password" class="form-control" asp-for="RePassword" placeholder="تکرار رمز عبور " aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="text-danger row d-block" asp-validation-summary="All"></div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> تغییر کلمه عبور </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>