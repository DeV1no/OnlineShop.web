@page "{id}"
@model OnlineShop.web.Pages.Admin.Courses.IndexEpisode

@{
    ViewData["Title"] = "بخش های  دوره";
}

<!DOCTYPE html>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست بخش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">
                    <a class="btn btn-outline btn-success" href="/admin/Courses/CreateEpisode/@ViewData["CourseId"].ToString()">افزودن بخش جدید</a>
                    <a href="/Admin/Courses/" class="btn btn-danger btn-outline"> بازگشت</a>
                </div>

                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>عنوان بخش</th>
                        <th>زمان</th>
                        <th>رایگان</th>
                        <th>دستورات</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var episode in Model.CourseEpisodes)
                    {
                        <tr>
                            <td>@episode.EpisodeId</td>
                            <td>
                                @episode.EpisodeTitle
                            </td>
                            <td>
                                @episode.EpisodeTime
                            </td>
                            <td>
                                @if (episode.IsFree)
                                {
                                    <span class="text-success">
                                       بله
                                    </span>
                                }
                                else
                                {<span class="text-danger">
                                    خیر
                                 </span>
                                    
                                }
                                
                            </td>
                            <td>
                                <a href="/Admin/Courses/EditEpisode/@episode.EpisodeId" class="btn btn-warning btn-sm">
                                    ویرایش
                                </a>
                                <a href="/Admin/Courses/DeleteCourse/@episode.EpisodeId" class="btn btn-danger btn-sm">
                                    حذف
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>