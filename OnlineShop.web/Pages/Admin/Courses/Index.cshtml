@page
@model OnlineShop.web.Pages.Admin.Courses.Index

@{
    ViewData["Title"] = "لیست دوره ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">
                    <a class="btn btn-outline btn-success" href="/admin/Courses/CreateCourse">افزودن دوره جدید</a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                    <tr>
                        <th>تصویر دوره</th>
                        <th>عنوان دوره</th>
                        <th>تعداد جلسه</th>
                        <th>دستورات</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var course in Model.ListCourse)
                    {
                        <tr>
                            <td>
                                <img src="/course/image/@course.ImageName" width="50px" height="50px" alt="">
                            </td>
                            <td>
                                @course.Title
                            </td>
                            <td>
                                @course.EpisodeCount
                            </td>
                            <td>
                                <a href="/Admin/Roles/EditCourse/@course.CourseId" class="btn btn-warning btn-sm">
                                    ویرایش
                                </a>
                                <a href="/Admin/Roles/DeleteCourse/@course.CourseId" class="btn btn-danger btn-sm">
                                    حذف
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>