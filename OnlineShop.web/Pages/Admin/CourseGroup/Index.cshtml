@page
@model OnlineShop.web.Pages.Admin.CourseGroup.Index

@{
    ViewData["Title"] = "لیست گروه ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <div class="col-md-12" style="margin: 10px 0;">
                            <a class="btn btn-outline btn-success" href="/admin/CourseGroup/CreateGroup">افزودن گروه جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                            <tr>
                                <th>عنوان گروه</th>
                                <th>عنوان گروه</th>
                                <th>دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.CourseGroups.Where(g => g.ParentId == null))
                            {
                                <tr>
                                    <td>@item.GroupTitle</td>
                                    <td>
                                        @if (item.CourseGroups.Any())
                                        {
                                            <ul>
                                                @foreach (var sub in item.CourseGroups)
                                                {
                                                    <li
                                                    >
                                                        @sub.GroupTitle

                                                        <a href="/Admin/CourseGroup/EditGroup/@sub.GroupId" class="text-warning btn-sm"
                                                           style="margin-right: 1rem">
                                                            ویرایش
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/CourseGroup/CreateGroup/@item.GroupId" class="btn btn-info btn-sm">
                                            ثبت زیر گروه
                                        </a>
                                        <a href="/Admin/CourseGroup/EditGroup/@item.GroupId" class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                        <a href="/Admin/CourseGroup/DeleteGroup/@item.GroupId" class="btn btn-danger btn-sm">
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>