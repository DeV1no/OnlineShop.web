@page
@using OnlineShop.web.Entities.Permissions
@using OnlineShop.web.Migrations
@model OnlineShop.web.Pages.Admin.Roles.CreateRole

@{
    ViewData["Title"] = "افزودن نقش جدید";
    List<Permission> permissions = ViewData["Permissions"] as List<Permission>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">

            افزودن نقش جدید


        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    نقش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان نقش</label>
                        <input type="text" asp-for="Role.RoleTitle" class="form-control">
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success"/>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    دسترسی های نقش
                </div>
                <!-- /.panel-heading -->
                 <div class="panel-body">
                                  <ul>
                                      @foreach (var permission in permissions.Where(p => p.ParentId == null))
                                      {
                                          <li>
                                              <input type="checkbox" name="SelectedPermission" value="@permission.PermissionId" /> @permission.permissionTitle
              
                                              @if (permissions.Any(p => p.ParentId == permission.ParentId))
                                              {
                                                  <ul>
                                                      @foreach (var sub in permissions.Where(p => p.ParentId == permission.PermissionId))
                                                      {
                                                          <li>
                                                              <input type="checkbox" name="SelectedPermission" value="@sub.PermissionId" /> @sub.permissionTitle
                                                              @if (permissions.Any(p => p.ParentId == sub.ParentId))
                                                              {
                                                                  <ul>
              
                                                                      @foreach (var sub2 in permissions.Where(p => p.ParentId == sub.PermissionId))
                                                                      {
                                                                      <li>
                                                                      <input type="checkbox" name="SelectedPermission" value="@sub2.PermissionId" /> @sub2.permissionTitle
                                                                      </li>
                                                                      }
                                                                  </ul>
                                                              }
                                                          </li>
                                                      }
                                                  </ul>
                                              }
                                          </li>
                                      }
                                  </ul>
                              </div>
                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>