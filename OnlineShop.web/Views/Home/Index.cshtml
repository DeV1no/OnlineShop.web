@model Tuple<List<OnlineShop.web.DTOs.Course.ShowCourseListItemViewModel>, int>
@{
    ViewData["Title"] = "خانه";
}

@section SearchBox
{
    <header>
        <a href="" class="logo">
            <img src="/images/logo.png">
        </a>
        <h1> با اساتید مجرب و کارآزموده در خودآموز </h1>
        <h2> آموزش ببینید ، تجربه کسب کنید و بازار کار شوید </h2>
        <h3> با کمترین هزینه خودت یاد بگیر </h3>
    </header>
    <div class="search-form">
        <form action="/Course" method="get">
            <input type="text" name="filter" placeholder="چی دوست داری یاد بگیری ؟">
            <button>
                <i class="zmdi zmdi-search"></i>
            </button>
        </form>
    </div>
}

<main id="home-page">
    <div class="container">
        <section class="terms-items">
            <header>
                <h2> آخرین دوره های </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">

                @foreach (var item in Model.Item1)
                {
                    <partial name="_boxCourse" model="@item"/>
                }
            </div>
        </section>

        <hr>

        <section class="terms-items">
            <header>
                <h2> دوره های محبوب  </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                   <!-- /col -->
            </div>
        </section>
    </div>
</main>