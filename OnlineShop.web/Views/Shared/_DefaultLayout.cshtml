<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> آنلاین شاپ | @ViewData["Title"] </title>
    <partial name="_MetaTags"/>
    <partial name="_Styles"/>
    <script src="/js/jquery.min.js"></script>
</head>
<body>
<script src="/js/modernizr-custom.js"></script>

<div class="landing-layer">
    <div class="container">
        <nav>
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <ul>
                        <li>
                            <a href=""> همکاری در فروش </a>
                            <a href=""> درباره ما </a>
                            <a href=""> تماس با ما </a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <div class="clientarea">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="loggein ">
                                <i class="zmdi zmdi-account"></i>
                                <a href="/UserPanel">

                                    @User.Identity.Name
                                    عزیز
                                    ، خوش آمدی
                                </a>/
                                <a href="/Logout"> خروج </a>
                            </div>
                        }
                        else
                        {
                            <div class="signin">
                                <i class="zmdi zmdi-account"></i>
                                <a href="/login"> ورود </a> /
                                <a href="/register"> عضویت </a>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </nav>
        @RenderSection("SearchBox", false)
    </div>
</div>

<!-- main manu -->
@await Component.InvokeAsync("CourseGroupComponent")
<!-- /main manu -->
<!-- content -->
@RenderBody()
<!-- /content -->
<!-- footer -->
<partial name="_Footer"/>
<!-- /footer -->

<script src="/js/bootstrap.min.js"></script>
<script src="/js/script.js"></script>
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.js"></script>
@RenderSection("Scripts",false)
</body>
</html>